@model University.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details Student</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3 pt-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-9 pt-2">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-3 pt-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-9 pt-2">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-3 pt-2">
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd class="col-sm-9 pt-2">
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dt class="col-sm-3 pt-2">
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd class="col-sm-9 pt-2">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

<div class="form-group pt-5">
    <div class="row d-flex flex-row-reverse">
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
        </div>
        <div class="col-auto">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-primary">Edit</a>
        </div>
    </div>
</div>
